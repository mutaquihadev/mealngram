<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.favorite.FavoriteRecipesFragment">

    <include
        android:id="@+id/toolbar_favorite"
        layout="@layout/toolbar_generic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_recipes_favorites"
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_favorite"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
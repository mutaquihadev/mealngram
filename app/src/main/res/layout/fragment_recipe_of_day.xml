<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.recipeDay.RecipeOfDayFragment">

    <include
        android:id="@+id/toolbar_recipe_of_day"
        layout="@layout/toolbar_generic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_recipe_of_day"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/text_recipe_of_day"
        app:layout_constraintTop_toBottomOf="@id/toolbar_recipe_of_day" />

    <TextView
        android:id="@+id/text_recipe_of_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_default"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/image_recipe_of_day" />

    <TextView
        android:id="@+id/text_description_recipeof_day"
        app:layout_constraintTop_toBottomOf="@id/text_recipe_of_day"
        android:textColor="@color/color_default"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>